{
  "definitions": [
    {
      "title": "Articles",
      "id": "articles",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Articles",
              "model": "articles"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "articles",
      "fields": [
        {
          "component": "select",
          "label": "Layout Type",
          "name": "layout-type",
          "valueType": "string",
          "options": [
            {
              "name": "All Articles",
              "value": "child-article"
            },
            {
              "name": "All Articles with tags",
              "value": "child-article-tag"
            },
            {
              "name": "Recent Articles",
              "value": "recent-article"
            }
          ]
        },
        {
          "component": "container",
          "label": "List all Articles as card under the Selected Parent Page",
          "name": "child-article-container",
          "valueType": "string",
          "collapsible": false,
          "fields": [
            {
              "component": "aem-content",
              "name": "child-article-parent",
              "label": "Parent Page",
              "valueType": "string",
              "required": true,
              "validation": {
                "rootPath": "/content/eds-wknd"
              }
            },
            {
              "component": "number",
              "name": "child-article-depth",
              "label": "Child Depth",
              "valueType": "number",
              "value": 1,
              "validation": {
                "numberMin": 1,
                "customErrorMsg": "Value cannot be less than 1."
              }
            }
          ],
          "condition": {
            "===": [
              {
                "var": "layout-type"
              },
              "child-article"
            ]
          }
        },
        {
          "component": "container",
          "label": "List all Articles as card with Tag filter under Selected Parent Page",
          "name": "child-article-tag-container",
          "valueType": "string",
          "collapsible": false,
          "fields": [
            {
              "component": "aem-content",
              "name": "child-article-tag-parent",
              "label": "Parent Page",
              "valueType": "string",
              "required": true,
              "validation": {
                "rootPath": "/content/eds-wknd"
              }
            },
            {
              "component": "number",
              "name": "child-article-tag-depth",
              "label": "Child Depth",
              "valueType": "number",
              "value": 1,
              "validation": {
                "numberMin": 1,
                "customErrorMsg": "Value cannot be less than 1."
              }
            }
          ],
          "condition": {
            "===": [
              {
                "var": "layout-type"
              },
              "child-article-tag"
            ]
          }
        },
        {
          "component": "container",
          "label": "List recent Article Cards from Selected Parent Page",
          "name": "recent-article-container",
          "valueType": "string",
          "collapsible": false,
          "fields": [
            {
              "component": "aem-content",
              "name": "recent-article-parent",
              "label": "Parent Page",
              "valueType": "string[]",
              "multi": true,
              "required": true,
              "validation": {
                "rootPath": "/content/eds-wknd"
              }
            },
            {
              "component": "number",
              "name": "recent-article-parent-depth",
              "label": "Child Depth",
              "valueType": "number",
              "value": 1,
              "validation": {
                "numberMin": 1,
                "customErrorMsg": "Value cannot be less than 1."
              }
            },
            {
              "component": "number",
              "name": "recent-article-parent-count",
              "label": "Article Count",
              "valueType": "number",
              "value": 4,
              "validation": {
                "numberMin": 1,
                "customErrorMsg": "Value cannot be less than 1."
              }
            }
          ],
          "condition": {
            "===": [
              {
                "var": "layout-type"
              },
              "recent-article"
            ]
          }
        },
        {
          "component": "select",
          "label": "Order By",
          "name": "order",
          "valueType": "string",
          "options": [
            {
              "name": "Default",
              "value": ""
            },
            {
              "name": "Title",
              "value": "title"
            },
            {
              "name": "Last modified date",
              "value": "last-modified-date"
            }
          ]
        },
        {
          "component": "select",
          "label": "Sort Order",
          "name": "sort",
          "valueType": "string",
          "options": [
            {
              "name": "Ascending",
              "value": "ascending"
            },
            {
              "name": "Descending",
              "value": "descending"
            }
          ]
        }
      ]
    }
  ],
  "filters": []
}