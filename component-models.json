      {
        "component": "container",
        "label": "List all Articles as card under the Selected Parent Page",
        "name": "child-article-container",
        "valueType": "string",
        "collapsible": false,
        "fields": [
          {
            "component": "aem-content",
            "name": "child-article-parent",
            "label": "Parent Page",
            "valueType": "string",
            "required": true,
            "validation": {
              "rootPath": "/content/eds-wknd"
            }
          },
          {
            "component": "number",
            "name": "child-article-depth",
            "label": "Child Depth",
            "valueType": "number",
            "value": 1,
            "validation": {
              "numberMin": 1,
              "customErrorMsg": "Value cannot be less than 1."
            }
          }
        ],
        "condition": {
          "===": [
            {
              "var": "layout-type"
            },
            "child-article"
          ]
        }
      },
      {
        "component": "container",
